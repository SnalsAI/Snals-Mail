[Unit]
Description=SNALS Email Agent - Backend API
After=network.target postgresql.service

[Service]
Type=simple
User=claude
Group=claude
WorkingDirectory=/home/claude/snals-email-agent/backend
Environment="PATH=/home/claude/snals-email-agent/backend/venv/bin"
ExecStart=/home/claude/snals-email-agent/backend/venv/bin/uvicorn main:app --host 0.0.0.0 --port 8001
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target
